# loops

mi_lista = [1,2,3,4,5]
for i in mi_lista:
    print("El nuemro es",i)

resultado = 0
for i in mi_lista:
    resultado += i
   
print(f"El resultado de la suma de mi lista es: {resultado}")

for i in range(2,9):
    print(i)

mi_lista2 = ["lunes","martes","miercoles","jueves","viernes"]

for i in mi_lista2:
    if i != "lunes":
        print(f"feliz: {i}ยก")

# while loop
i = 0

while i < 5:
    i += 1
    if i == 3:
        continue
    print(i)
    if i == 4:
        break
else:
    print("1 es ahora mayor o igual a 5")

